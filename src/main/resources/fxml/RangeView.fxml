<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.geometry.Insets?>

<!--
    Range Viewer Layout
    ===================
    Top section: Controls (position selector, table size, situation)
    Main section: 13x13 hand grid
    Bottom section: Legend and stats
-->
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.stacklogic.controller.RangeController"
      spacing="15"
      styleClass="range-view">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <!-- CONTROLS SECTION -->
    <HBox spacing="20" alignment="CENTER_LEFT" styleClass="controls-bar">

        <!-- Position Selection -->
        <VBox spacing="5">
            <Label text="Your Position" styleClass="control-label"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ComboBox fx:id="positionCombo" promptText="Select Position"/>
                <Button fx:id="nextPositionBtn" text="Next" onAction="#handleNextPosition"
                        styleClass="button secondary"/>
            </HBox>
        </VBox>

        <Separator orientation="VERTICAL"/>

        <!-- Table Size -->
        <VBox spacing="5">
            <Label text="Table Size" styleClass="control-label"/>
            <ComboBox fx:id="tableSizeCombo" promptText="Select Size"/>
        </VBox>

        <Separator orientation="VERTICAL"/>

        <!-- Situation Selection -->
        <VBox spacing="5">
            <Label text="Situation" styleClass="control-label"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ComboBox fx:id="situationCombo" promptText="Select Situation"/>
            </HBox>
        </VBox>

    </HBox>

    <Separator/>

    <!-- MAIN GRID SECTION -->
    <VBox alignment="CENTER" VBox.vgrow="ALWAYS">

        <!-- Range Name Display -->
        <Label fx:id="rangeNameLabel" text="Select a position and situation"
               styleClass="range-name"/>

        <!-- The 13x13 Grid -->
        <!--
            GridPane is the perfect layout for our range grid.
            We'll populate the cells programmatically in the controller
            because creating 169 labels in FXML would be tedious.
        -->
        <GridPane fx:id="handGrid" hgap="2" vgap="2" alignment="CENTER">
            <padding><Insets top="15" right="0" bottom="15" left="0"/></padding>
        </GridPane>

        <!-- Stats -->
        <Label fx:id="statsLabel" text="" styleClass="stats-label"/>

    </VBox>

    <Separator/>

    <!-- LEGEND -->
    <HBox spacing="30" alignment="CENTER" styleClass="legend">
        <HBox spacing="8" alignment="CENTER">
            <Region styleClass="legend-raise"/>
            <Label text="Raise/Open"/>
        </HBox>
        <HBox spacing="8" alignment="CENTER">
            <Region styleClass="legend-call"/>
            <Label text="Call"/>
        </HBox>
        <HBox spacing="8" alignment="CENTER">
            <Region styleClass="legend-3bet"/>
            <Label text="3-Bet"/>
        </HBox>
        <HBox spacing="8" alignment="CENTER">
            <Region styleClass="legend-fold"/>
            <Label text="Fold"/>
        </HBox>
    </HBox>

</VBox>
